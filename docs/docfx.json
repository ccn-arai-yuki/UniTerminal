{
  "build": {
    "content": [
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "ja/**.md",
          "ja/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appTitle": "UniTerminal",
      "_appName": "UniTerminal",
      "_appLogoPath": "images/logo.svg",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_gitContribute": {
        "repo": "https://github.com/AraiYuhki/UniTerminal",
        "branch": "main"
      }
    },
    "sitemap": {
      "baseUrl": "https://araiyuhki.github.io/UniTerminal_Reference"
    },
    "xref": [
      "https://learn.microsoft.com/en-us/dotnet/.xrefmap.json"
    ],
    "xrefService": ["https://xref.docs.microsoft.com/query?uid={uid}"]
  }
}
